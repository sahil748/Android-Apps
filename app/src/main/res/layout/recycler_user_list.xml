<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/list_image_height"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_list_margin_left"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/layout_list_margin_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"

            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/name_text_margin_top_list"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:id="@+id/tv_user_name"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_margin_right_id"
                android:gravity="end"
                android:layout_marginTop="@dimen/name_text_margin_top_list"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:id="@+id/tv_user_id"
                android:layout_marginEnd="@dimen/list_margin_right_id" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_email"
            android:layout_marginTop="@dimen/name_text_margin_top_list"
            android:textColor="@color/secondary_text" />
    </LinearLayout>


</LinearLayout>