<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/layout_padding_allsides"
    android:layout_height="match_parent"
    tools:context=".OtpActivity">
    <ImageView
        android:id="@+id/otp_iv_back"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"
        android:onClick="moveToSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/otp_tv_header_1"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@+id/otp_iv_back"
        android:textSize="@dimen/large_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/otp_tv_header_2"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@+id/otp_tv_header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_textsize" />
    <TextView
        android:id="@+id/otp_tv_header_3"
        android:layout_below="@+id/otp_tv_header_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/medium_textsize" />
    <LinearLayout
        android:id="@+id/otp_ll_otp"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_below="@+id/otp_tv_header_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/otp_et_digit_1"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="@dimen/medium_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/otp_et_digit_2"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="@dimen/medium_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/otp_et_digit_3"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:textSize="@dimen/medium_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/otp_et_digit_4"
            android:maxLength="1"
            android:inputType="number"
            android:layout_weight="1"
            android:textSize="@dimen/medium_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/otp_ll_otp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/view_margin"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/otp_btn_resend"
            android:layout_weight="1"
            android:textSize="@dimen/btn_txt_size"
            style="@style/secondaryRoundedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/otp_btn_submit"
            android:textSize="@dimen/btn_txt_size"
            android:layout_marginLeft="@dimen/view_margin"
            style="@style/primaryBtn"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>