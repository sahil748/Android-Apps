<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_post_margin_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/post_id_padding_left"
                    android:paddingTop="@dimen/post_id_padding_top"
                    android:text="@string/post_id_text"
                    android:textColor="@color/secondary_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_post_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/post_id_margin_left"
                    android:paddingTop="@dimen/post_id_padding_top"
                    android:paddingRight="@dimen/post_id_padding_right"
                    android:textColor="@color/secondary_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/post_title_padding_left"
                android:paddingTop="@dimen/post_title_padding_top"
                android:paddingRight="@dimen/post_title_padding_right"
                android:textColor="@color/secondary_text_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_post_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_post_title"
                android:layout_marginTop="@dimen/post_body_margin_top"
                android:paddingLeft="@dimen/post_body_padding_left"
                android:paddingTop="@dimen/post_body_padding_top"
                android:paddingRight="@dimen/post_body_padding_right"
                android:paddingBottom="@dimen/post_body_padding_bottom"
                android:textColor="#000000" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>